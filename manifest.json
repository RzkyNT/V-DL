{
  "manifest_version": 3,
  "name": "Media Downloader Pro",
  "version": "1.0.0",
  "description": "Download videos, images, dan media dari halaman web dengan mudah",
  "author": "RzkyNT",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Media Downloader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
